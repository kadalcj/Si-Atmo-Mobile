<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".CRUD.DetilPengadaanActivity">

    <TextView
            android:text="Nama Perusahaan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textNamaPerusahaan" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="21dp"
            app:layout_constraintTop_toTopOf="parent" android:textColor="@color/text2" android:textSize="24sp"/>
    <TextView
            android:text="Tanggal Pemesanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textTanggalPemesanan" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/text2" android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.497" android:layout_marginTop="21dp"
            app:layout_constraintTop_toBottomOf="@+id/textNamaPerusahaan"/>
    <TextView
            android:text="Status Pemesanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textStatusPemesanan" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/text2" android:textSize="24sp"
            android:layout_marginTop="21dp" app:layout_constraintTop_toBottomOf="@+id/textTanggalPemesanan"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hapus"
            android:id="@+id/btnHapus"
            android:textColor="@color/text2"
            android:backgroundTint="@color/background"
            android:layout_marginTop="21dp"
            app:layout_constraintTop_toBottomOf="@+id/textStatusPemesanan" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>