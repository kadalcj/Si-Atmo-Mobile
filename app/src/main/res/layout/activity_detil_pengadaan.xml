<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".CRUD.DetilPengadaanActivity">

    <TextView
            android:text="Nama Perusahaan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textNamaPerusahaan"
            android:textColor="@color/text2" android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" android:layout_marginStart="16dp"
            android:layout_marginBottom="10dp" app:layout_constraintBottom_toTopOf="@+id/textTanggalPemesanan"/>
    <TextView
            android:text="Tanggal Pemesanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textTanggalPemesanan"
            android:textColor="@color/text2" android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintTop_toBottomOf="@+id/textNamaPerusahaan"
            android:layout_marginBottom="13dp" app:layout_constraintBottom_toTopOf="@+id/textStatusPemesanan"/>
    <TextView
            android:text="Status Pemesanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textStatusPemesanan"
            android:textColor="@color/text2" android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintTop_toBottomOf="@+id/textTanggalPemesanan"
            android:layout_marginBottom="29dp" app:layout_constraintBottom_toTopOf="@+id/btnLaporan"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hapus"
            android:id="@+id/btnHapus"
            android:textColor="@color/text2"
            android:backgroundTint="@color/background"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="9dp" app:layout_constraintBaseline_toBaselineOf="@+id/btnUpdate"
            app:layout_constraintEnd_toStartOf="@+id/btnUpdate" android:layout_marginEnd="1dp"
    />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambah"
            android:id="@+id/btnTambahDetil"
            android:textColor="@color/text2"
            android:backgroundTint="@color/background"
            app:layout_constraintTop_toBottomOf="@+id/btnLaporan"
            app:layout_constraintStart_toEndOf="@+id/btnUpdate" app:layout_constraintEnd_toStartOf="@+id/btnLaporan"
            android:layout_marginBottom="28dp" app:layout_constraintBottom_toTopOf="@+id/refreshLayout"/>

    <Button
            android:textColor="@color/text2"
            android:backgroundTint="@color/background"
            android:text="Cetak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnLaporan"
            app:layout_constraintTop_toBottomOf="@+id/textStatusPemesanan"
            app:layout_constraintStart_toEndOf="@+id/btnTambahDetil" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btnTambahDetil" android:layout_marginEnd="9dp"
    />

    <Button
            android:textColor="@color/text2"
            android:backgroundTint="@color/background"
            android:text="Update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnUpdate"
            app:layout_constraintTop_toTopOf="@+id/btnTambahDetil"
            app:layout_constraintStart_toEndOf="@+id/btnHapus" app:layout_constraintEnd_toStartOf="@+id/btnTambahDetil"
            android:layout_marginEnd="5dp"/>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/refreshLayout"
            app:layout_constraintTop_toBottomOf="@+id/btnTambahDetil"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycleViewDetil"
                android:layout_width="match_parent"
                android:layout_height="598dp" tools:layout_editor_absoluteY="69dp" tools:layout_editor_absoluteX="8dp"/>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</androidx.constraintlayout.widget.ConstraintLayout>