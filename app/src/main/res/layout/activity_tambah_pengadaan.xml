<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".CRUD.TambahPengadaanActivity">
    <EditText
            android:textColorHint="@color/text2"
            android:textColor="@color/text2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editKode"
            android:hint="Kode Sparepart"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/editSatuan"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" android:layout_marginEnd="20dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:textColorHint="@color/text2"
            android:textColor="@color/text2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editSatuan"
            android:hint="Satuan"
            android:layout_marginTop="11dp" app:layout_constraintTop_toBottomOf="@+id/editJumlahPemesanan"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" android:layout_marginEnd="20dp"
    />
    <EditText
            android:textColorHint="@color/text2"
            android:textColor="@color/text2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/editJumlahPemesanan"
            android:inputType="number" android:hint="Jumlah Pemesanan"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/editNamaPerusahaan" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" android:layout_marginEnd="20dp"/>
    <EditText
            android:textColorHint="@color/text2"
            android:textColor="@color/text2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editNamaPerusahaan"
            android:hint="Nama Perusahaan"
            android:layout_marginTop="11dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" android:layout_marginEnd="20dp"
    />
    <Button
            android:textColor="@color/text2"
            android:backgroundTint="@color/background"
            android:text="Tambah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnTambah"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/editKode" app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>