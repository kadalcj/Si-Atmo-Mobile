<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".CRUD.TambahPengadaanActivity">
    <EditText
            android:textColorHint="@color/text2"
            android:textColor="@color/text2"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/editJumlahPemesanan"
            android:inputType="number" android:hint="Jumlah Pemesanan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="21dp"
            app:layout_constraintTop_toBottomOf="@+id/spinnerKode"/>
    <Button
            android:textColor="@color/text2"
            android:backgroundTint="@color/background"
            android:text="Tambah"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnTambah"
            android:layout_marginTop="21dp"
            app:layout_constraintTop_toBottomOf="@+id/spinnerSatuan" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerNamaPerusahaan"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="35dp" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/spinnerKode" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Spinner
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerSatuan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="21dp"
            app:layout_constraintTop_toBottomOf="@+id/editJumlahPemesanan"/>
    <Spinner
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerKode"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/spinnerNamaPerusahaan"/>
</androidx.constraintlayout.widget.ConstraintLayout>