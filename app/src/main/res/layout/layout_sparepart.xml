<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:id="@+id/clickDataSparepart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:background="@color/highlight">

            <TextView
                    android:textColor="@color/text2"
                    android:id="@+id/kodeSparepart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Kode Sparepart"/>

            <TextView
                    android:textColor="@color/text2"
                    android:id="@+id/namaSparepart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Nama Sparepart"/>

            <TextView
                    android:textColor="@color/text2"
                    android:id="@+id/tipeSparepart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Tipe Sparepart"/>

            <TextView
                    android:textColor="@color/text2"
                    android:id="@+id/merkSparepart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Merk Sparepart"/>

            <TextView
                    android:textColor="@color/text2"
                    android:id="@+id/hargaBeli"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Harga Beli"/>

            <TextView
                    android:textColor="@color/text2"
                    android:id="@+id/hargaJual"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Harga Jual"/>

            <TextView
                    android:textColor="@color/text2"
                    android:id="@+id/tempatPeletakan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Tempat Peletakan"/>

            <TextView
                    android:textColor="@color/text2"
                    android:id="@+id/jumlahStok"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Jumlah Stok"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>