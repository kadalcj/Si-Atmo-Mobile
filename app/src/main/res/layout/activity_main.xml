<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@color/background">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SiAtmo Mobile"
            android:textSize="36sp"
            android:id="@+id/textView"
            android:textColor="@color/text"
            android:textAlignment="center" android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="191dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sul's Compagnie Dev House"
            android:textSize="14sp"
            android:id="@+id/textView2"
            android:textColor="@color/text2"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editUser"
            android:textAlignment="viewStart" android:hint="Username" android:textColor="@color/text"
            android:textColorHint="@color/text2"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="203dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="62dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="62dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/editPass"
            android:textAlignment="viewStart" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/editUser" android:hint="Password"
            android:textColor="@color/text" android:inputType="textPassword"
            android:textColorHint="@color/text2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="62dp" android:layout_marginEnd="62dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnLogin"
            android:textColor="@color/text"
            app:layout_constraintTop_toBottomOf="@+id/editPass" android:layout_marginTop="10dp"
            android:background="@color/highlight" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>