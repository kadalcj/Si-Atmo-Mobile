<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DashboardActivity"
        android:background="@color/background"
        android:orientation="vertical">
    <Button
            android:id="@+id/btnDashSparepart"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:background="@color/highlight"
            android:layout_margin="10dp"
            android:text="SPAREPART"
            android:textColor="@color/text"
            android:textSize="25dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="9dp" android:layout_marginEnd="9dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:id="@+id/btnDashSupplier"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:background="@color/highlight"
            android:layout_margin="10dp"
            android:text="SUPLIER"
            android:textColor="@color/text"
            android:textSize="25dp"
            android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/btnDashSparepart"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="9dp" android:layout_marginEnd="9dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:id="@+id/btnDashPengadaan"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:background="@color/highlight"
            android:layout_margin="10dp"
            android:text="PENGADAAN"
            android:textColor="@color/text"
            android:textSize="25dp" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/btnDashSupplier" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="9dp" android:layout_marginEnd="9dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:id="@+id/btnDashLaporan"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:background="@color/highlight"
            android:layout_margin="10dp"
            android:text="LAPORAN"
            android:textColor="@color/text"
            android:textSize="25dp"
            android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/btnDashPengadaan"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="9dp" android:layout_marginEnd="9dp"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>