<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DashboardActivity"
        android:background="@color/background"
        android:orientation="vertical">
    <Button
            android:id="@+id/btnDashSparepart"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/highlight"
            android:text="SPAREPART"
            android:textColor="@color/text"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btnDashSupplier" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="9dp" android:layout_marginEnd="9dp"/>
    <Button
            android:id="@+id/btnDashSupplier"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/highlight"
            android:text="SUPLIER"
            android:textColor="@color/text"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@+id/btnDashSparepart" android:layout_marginBottom="9dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/btnDashPengadaan"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="9dp" android:layout_marginEnd="9dp"/>
    <Button
            android:id="@+id/btnDashPengadaan"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/highlight"
            android:text="PENGADAAN"
            android:textColor="@color/text"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@+id/btnDashSupplier" android:layout_marginBottom="10dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/btnDashLaporan"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="9dp" android:layout_marginEnd="9dp"/>
    <Button
            android:id="@+id/btnDashLaporan"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/highlight"
            android:text="LAPORAN"
            android:textColor="@color/text"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@+id/btnDashPengadaan" android:layout_marginBottom="11dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/btnDashTransaksi"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="9dp" android:layout_marginEnd="9dp"/>
    <Button
            android:id="@+id/btnDashTransaksi"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/highlight"
            android:text="History Transaksi"
            android:textColor="@color/text"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@+id/btnDashLaporan" android:layout_marginBottom="10dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/btnDashSurat"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="9dp" android:layout_marginEnd="9dp"/>
    <Button
            android:id="@+id/btnDashSurat"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/highlight"
            android:text="Surat Menyurat"
            android:textColor="@color/text"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@+id/btnDashTransaksi" android:layout_marginBottom="97dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="9dp" android:layout_marginEnd="9dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>