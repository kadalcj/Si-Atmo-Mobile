<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CRUD.TambahSparepartActivity"
        android:background="@color/background">

    <EditText
            android:textColorHint="@color/text2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editKodeSparepart"
            android:textColor="@color/text2" android:hint="Kode Sparepart"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" android:layout_marginEnd="20dp"/>
    <EditText
            android:textColorHint="@color/text2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editNamaSparepart"
            android:textColor="@color/text2"
            android:hint="Nama Sparepart"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/editKodeSparepart"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" android:layout_marginEnd="20dp"
    />
    <EditText
            android:textColorHint="@color/text2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTipeSparepart"
            android:textColor="@color/text2"
            android:hint="Tipe Sparepart"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/editNamaSparepart"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" android:layout_marginEnd="20dp"
    />
    <EditText
            android:textColorHint="@color/text2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editMerkSparepart"
            android:textColor="@color/text2"
            android:hint="Merk Sparepart"
            android:layout_marginTop="21dp" app:layout_constraintTop_toBottomOf="@+id/editTipeSparepart"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" android:layout_marginEnd="20dp"
    />
    <EditText
            android:textColorHint="@color/text2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/editHargaBeli"
            android:textColor="@color/text2"
            android:hint="Harga Beli" android:contentDescription="Harga" android:inputType="numberDecimal"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/editMerkSparepart" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" android:layout_marginEnd="20dp"/>
    <Button
            android:text="Batal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnBatal"
            android:textColor="@color/text2" android:background="@color/highlight"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/editJumlahStok"
            app:layout_constraintEnd_toStartOf="@+id/btnTambah" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="25dp"/>
    <Button
            android:text="Tambah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnTambah"
            android:textColor="@color/text2" android:background="@color/highlight"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/editJumlahStok" app:layout_constraintStart_toEndOf="@+id/btnBatal"
            app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
            android:textColorHint="@color/text2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/editHargaJual"
            android:textColor="@color/text2"
            android:hint="Harga Jual" android:inputType="numberDecimal"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/editHargaBeli" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" android:layout_marginEnd="20dp"/>
    <EditText
            android:textColorHint="@color/text2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTempatPeletakan"
            android:textColor="@color/text2"
            android:hint="Tempat Peletakan"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/editHargaJual"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" android:layout_marginEnd="20dp"
    />
    <EditText
            android:textColorHint="@color/text2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/editJumlahStok"
            android:textColor="@color/text2"
            android:hint="Jumlah Stok" android:inputType="number"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/editTempatPeletakan" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" android:layout_marginEnd="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>