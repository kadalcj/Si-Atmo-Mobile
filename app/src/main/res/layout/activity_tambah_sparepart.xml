<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CRUD.TambahSparepartActivity"
        android:background="@color/background">

    <EditText
            android:textColorHint="@color/text2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editNamaSparepart"
            android:textColor="@color/text2"
            android:hint="Nama Sparepart"
            app:layout_constraintTop_toBottomOf="@+id/spinKode1" android:layout_marginBottom="20dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/editTipeSparepart"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" android:layout_marginEnd="20dp"/>
    <EditText
            android:textColorHint="@color/text2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTipeSparepart"
            android:textColor="@color/text2"
            android:hint="Tipe Sparepart"
            app:layout_constraintTop_toBottomOf="@+id/editNamaSparepart" android:layout_marginBottom="21dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/editMerkSparepart"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" android:layout_marginEnd="20dp"/>
    <EditText
            android:textColorHint="@color/text2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editMerkSparepart"
            android:textColor="@color/text2"
            android:hint="Merk Sparepart"
            app:layout_constraintTop_toBottomOf="@+id/editTipeSparepart" android:layout_marginBottom="21dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/editHargaBeli"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" android:layout_marginEnd="20dp"/>
    <EditText
            android:textColorHint="@color/text2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/editHargaBeli"
            android:textColor="@color/text2"
            android:hint="Harga Beli" android:contentDescription="Harga" android:inputType="numberDecimal"
            app:layout_constraintTop_toBottomOf="@+id/editMerkSparepart" android:layout_marginBottom="20dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/editHargaJual"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" android:layout_marginEnd="20dp"/>
    <Button
            android:text="Batal"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnBatal"
            android:textColor="@color/text2" android:background="@color/highlight"
            app:layout_constraintTop_toBottomOf="@+id/editHargaJual" app:layout_constraintEnd_toStartOf="@+id/btnTambah"
            android:layout_marginBottom="201dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="25dp"
    />
    <Button
            android:text="Tambah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnTambah"
            android:textColor="@color/text2" android:background="@color/highlight"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/btnBatal"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="202dp"/>

    <EditText
            android:textColorHint="@color/text2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/editHargaJual"
            android:textColor="@color/text2"
            android:hint="Harga Jual" android:inputType="numberDecimal"
            app:layout_constraintTop_toBottomOf="@+id/editHargaBeli" android:layout_marginBottom="90dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/btnBatal"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" android:layout_marginEnd="20dp"/>
    <EditText
            android:visibility="gone"
            android:textColorHint="@color/text2"
            android:layout_width="371dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTempatPeletakan"
            android:textColor="@color/text2"
            android:hint="Tempat Peletakan"
            app:layout_constraintStart_toStartOf="@+id/editHargaJual" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/editHargaJual"
            app:layout_constraintEnd_toStartOf="@+id/editHargaJual"/>
    <EditText
            android:visibility="gone"
            android:textColorHint="@color/text2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/editJumlahStok"
            android:textColor="@color/text2"
            android:hint="Jumlah Stok" android:inputType="number"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/btnTambah" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="205dp" android:layout_marginEnd="205dp"
    />
    <Spinner
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/spinKode1"
            android:layout_marginTop="26dp"
            app:layout_constraintEnd_toStartOf="@+id/spinKode2" android:layout_marginBottom="14dp"
            app:layout_constraintBottom_toTopOf="@+id/editNamaSparepart" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" android:layout_marginEnd="20dp"/>
    <Spinner
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/spinKode2"
            app:layout_constraintStart_toEndOf="@+id/spinKode1" app:layout_constraintEnd_toStartOf="@+id/editNomor"
            app:layout_constraintTop_toTopOf="@+id/spinKode1" app:layout_constraintBottom_toBottomOf="@+id/spinKode1"
            android:layout_marginEnd="21dp"/>
    <EditText
            android:textColor="@color/text2"
            android:textColorHint="@color/text2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editNomor"
            android:hint="XXX"
            android:layout_marginTop="26dp"
            app:layout_constraintStart_toEndOf="@+id/spinKode2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="20dp"
            android:textAlignment="viewStart"/>
</androidx.constraintlayout.widget.ConstraintLayout>