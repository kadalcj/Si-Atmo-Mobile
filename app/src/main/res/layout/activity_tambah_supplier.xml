<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CRUD.TambahSparepartActivity"
        android:background="@color/background">

    <EditText
            android:textColorHint="@color/text2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editNamaPerusahaan"
            android:textColor="@color/text2" android:hint="Nama Perusahaan"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" android:layout_marginEnd="20dp"/>
    <EditText
            android:textColorHint="@color/text2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editAlamatPerusahaan"
            android:textColor="@color/text2"
            android:hint="Alamat Perusahaan"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/editNamaPerusahaan"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" android:layout_marginEnd="20dp"
    />
    <EditText
            android:textColorHint="@color/text2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editNamaSales"
            android:textColor="@color/text2"
            android:hint="Nama Sales"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/editAlamatPerusahaan"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" android:layout_marginEnd="20dp"
    />
    <EditText
            android:textColorHint="@color/text2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editNoTelp"
            android:textColor="@color/text2"
            android:hint="No. Telp"
            android:layout_marginTop="21dp" app:layout_constraintTop_toBottomOf="@+id/editNamaSales"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" android:layout_marginEnd="20dp"
    />
    <Button
            android:text="Batal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnBatal"
            android:textColor="@color/text2" android:background="@color/highlight"
            app:layout_constraintEnd_toStartOf="@+id/btnTambah"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="25dp" android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/editNoTelp"/>
    <Button
            android:text="Tambah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnTambah"
            android:textColor="@color/text2" android:background="@color/highlight"
            app:layout_constraintStart_toEndOf="@+id/btnBatal"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/editNoTelp"/>
</androidx.constraintlayout.widget.ConstraintLayout>