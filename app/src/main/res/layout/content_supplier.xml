<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_supplier"
        android:background="@color/background"
        tools:context=".SupplierActivity">
    <EditText
            android:textColorHint="@color/text2"
            android:layout_width="283dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtSearch"
            app:layout_constraintEnd_toStartOf="@+id/btnCari" android:layout_marginEnd="10dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="10dp"
            android:textColor="@color/text" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            android:hint="Cari"/>
    <Button
            android:text="Cari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCari" android:layout_marginEnd="10dp" app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/highlight" android:textColor="@color/text"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="12dp" android:layout_marginBottom="9dp"
            app:layout_constraintBottom_toTopOf="@+id/refreshLayout"/>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:layout_width="395dp"
            android:layout_height="0dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnCari" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" android:id="@+id/refreshLayout">
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycleViewSupplier"
                android:layout_width="395dp"
                android:layout_height="598dp" tools:layout_editor_absoluteY="69dp" tools:layout_editor_absoluteX="8dp"/>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</androidx.constraintlayout.widget.ConstraintLayout>