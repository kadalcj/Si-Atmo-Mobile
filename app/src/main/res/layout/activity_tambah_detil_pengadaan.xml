<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CRUD.TambahDetilPengadaanActivity"
        android:background="@color/background">

    <EditText
            android:textColorHint="@color/text2"
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editKodeSparepart" android:hint="Kode Sparepart" android:layout_marginTop="31dp"
            android:layout_marginBottom="22dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/editJumlahPengadaan" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="9dp" android:layout_marginEnd="9dp"/>
    <EditText
            android:textColorHint="@color/text2"
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editJumlahPengadaan" android:hint="Jumlah Pemesanan"
            app:layout_constraintTop_toBottomOf="@+id/editKodeSparepart" android:layout_marginBottom="13dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/spinSatuan"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="9dp" android:layout_marginEnd="9dp"/>
    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/spinSatuan"
            app:layout_constraintTop_toBottomOf="@+id/editJumlahPengadaan" android:layout_marginBottom="525dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="9dp"/>
    <Button
            android:backgroundTint="@color/background"
            android:textColor="@color/text2"
            android:text="Tambah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnTambah"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@+id/spinSatuan" app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>