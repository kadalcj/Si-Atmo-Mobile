<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LaporanActivity"
        android:background="@color/background">

    <Button
            android:id="@+id/btnDashLaporan"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/highlight"
            android:text="Pendapatan Bulanan"
            android:textColor="@color/text"
            android:textSize="25dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btnDashLaporan2" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
    <Button
            android:id="@+id/btnDashLaporan2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/highlight"
            android:text="Pendapatan Tahunan"
            android:textColor="@color/text"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@+id/btnDashLaporan" android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/btnDashLaporan3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
    <Button
            android:id="@+id/btnDashLaporan3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/highlight"
            android:text="Pengeluaran Bulanan"
            android:textColor="@color/text"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@+id/btnDashLaporan2" android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/btnDashLaporan4"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
    <Button
            android:id="@+id/btnDashLaporan4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/highlight"
            android:text="Stok Terlaris"
            android:textColor="@color/text"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@+id/btnDashLaporan3" android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/btnDashLaporan6"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
    <Button
            android:id="@+id/btnDashLaporan5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/highlight"
            android:text="Sisa Stok Bulanan"
            android:textColor="@color/text"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@+id/btnDashLaporan6" android:layout_marginBottom="125dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
    <Button
            android:id="@+id/btnDashLaporan6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/highlight"
            android:text="Jumlah Service Kendaraan"
            android:textColor="@color/text"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@+id/btnDashLaporan4" android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/btnDashLaporan5"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>