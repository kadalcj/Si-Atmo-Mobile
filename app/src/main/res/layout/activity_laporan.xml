<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LaporanActivity"
        android:background="@color/background">

    <Button
            android:id="@+id/btnPendapatanBulanan"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/highlight"
            android:text="Pendapatan Bulanan"
            android:textColor="@color/text"
            android:textSize="25dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btnPendapatanTahunan" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
    <Button
            android:id="@+id/btnPendapatanTahunan"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/highlight"
            android:text="Pendapatan Tahunan"
            android:textColor="@color/text"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@+id/btnPendapatanBulanan" android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/btnPengeluaranBulanan"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
    <Button
            android:id="@+id/btnPengeluaranBulanan"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/highlight"
            android:text="Pengeluaran Bulanan"
            android:textColor="@color/text"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@+id/btnPendapatanTahunan" android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/btnStokTerlaris"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
    <Button
            android:id="@+id/btnStokTerlaris"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/highlight"
            android:text="Stok Terlaris"
            android:textColor="@color/text"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@+id/btnPengeluaranBulanan" android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/btnSisaStok"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
    <Button
            android:id="@+id/btnJumlahService"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/highlight"
            android:text="Sisa Stok Bulanan"
            android:textColor="@color/text"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@+id/btnSisaStok" android:layout_marginBottom="125dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
    <Button
            android:id="@+id/btnSisaStok"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/highlight"
            android:text="Jumlah Service Kendaraan"
            android:textColor="@color/text"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@+id/btnStokTerlaris" android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/btnJumlahService"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>